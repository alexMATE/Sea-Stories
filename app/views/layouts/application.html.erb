<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!--contenido MIOOO-->


<div id="wraper_flex">
    <div id="bara_menu">
      <div class="logo">
      </div>
      <div class="menu">
        <ul>
          <li><%= link_to "Blog", root_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "New Post", new_post_path %></li>
        </ul>
        <ul>
          <li>Twitter</li>
          <li>Facebook</li>
          <li>Istagram</li>
          <li>Email</li>
        </ul>

        <% if !user_signed_in? %>
          <p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
        <% end %>

      </div>
    </div>
    <div id="contenedor_principal_flex">
        <div class="header">
          <!-- <i class="fa fa-angle-down fa-lg"></i>
         -->
         <% if user_signed_in? %>
             <span class="nombre">
             <!--<p>Alex Man </p>-->
                <span class="buuton_header">
                  <%= link_to "New Post", new_post_path %>
                </span>
             </span>
             <span class="log_out">
             <!--<p><i class="fa fa-sign-out"></i>  Log out</p>-->
             <% if user_signed_in? %>
             <p class="logout">
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              </p>
             <% end %>
             </span>
          <% end %>
              <!--<div class="imagen_log">
               <img src="img/alex.png" alt="">
              </div>-->
        </div>
        <div class="imagen_header">
          <!-- <img src="/img/youandme.png" alt=""> -->
        </div>

        <div class="pagina_actual">
          <% if current_page?(root_path) %>
            <p>All Posts</p>
          <% elsif current_page?(about_path) %>
            <p>About</p>
          <% else %>
            <%= link_to "Back to All Posts", root_path %>
          <% end %>
        </div>

        <div class="contenido">
          <div class="cartera_flex_uno">
        <% flash.each do |name, msg| %>
          <%= content_tag(:div, msg, class: "alert") %>
        <% end %>
         <%= yield %>
          </div>
         </div>

        <!-- <div class="contenido">
         <div class="cartera_flex_uno">
            <div class="carta carta_uno">

            </div>
            <div class="carta carta_dos">carta 2</div>
            <div class="carta carta_tres">carta 3</div>
            <div class="carta carta_cuatro">carta 4</div>
            <div class="carta carta_cinco">carta 5</div>
            <div class="carta carta_seis">carta 6</div>
        </div>
      </div> -->
    </div>
  </div>

</body>
</html>
